<% layout('layouts/boilerplate') %> 

<!-- BEGIN: Content-->
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-left mb-0">Edit Room</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Admin</a>
                                </li>
                                <li class="breadcrumb-item"><a href="/admin/room">Rooms</a>
                                </li>
                                <li class="breadcrumb-item active">Edit
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Inputs start -->
            <section id="basic-input">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Create New Room</h4>
                            </div>
                            <div class="card-body">
                                <form action="/admin/package/<%= package._id %>?_method=PUT" method="post">
                                    <div class="row">
                                        <div class="col-xl-4 col-md-6 col-12 mb-1">
                                            <div class="form-group">
                                                <label for="name">Package Name</label>
                                                <input type="text" class="form-control" id="name" value="<%= package.name  %>" name="package[name]" placeholder="Package Name" />
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-md-6 col-12 mb-1">
                                            <div class="form-group">
                                                <label for="amount">Amount</label>
                                                <input type="text" class="form-control" id="amount" value="<%= package.amount  %>" name="package[amount]" placeholder="Amount" />
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-md-6 col-12 mb-1">
                                            <div class="form-group">
                                                <label for="type">Type</label>
                                                <select class="form-control" id="type" value="<%= package.type  %>" name="package[type]">
                                                    <option value="Seasonal">Seasonal</option>
                                                    <option value="Regular">Regular</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-md-6 col-12 mb-1">
                                            <div class="form-group">
                                                <label for="facilities">Facilities</label>
                                                <select class="form-control" id="facilities" value="<%= package.facilities  %>" name="package[facilities]">
                                                    <option label="Select Facilities"></option>
                                                    <% for(let facility of data['facility']){ %>
                                                        <option value="<%= facility._id %> "><%= facility.name  %> </option>
                                                    <%  } %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-xl-4 col-md-6 col-12 mb-1">
                                            <div class="form-group">
                                                <label for="ammenities">Ammenities</label>
                                                <select class="form-control" id="ammenities" value="<%= package.ammenities  %>" name="package[ammenities]">
                                                    <option label="Select Ammenities"></option>
                                                    <% for(let amenities of data['amenities']){ %>
                                                        <option value="<%= amenities._id %>"><%= amenities.name  %> </option>
                                                    <%  } %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-xl-12 col-md-12 col-12 mb-1">
                                            <div class="form-group">
                                                <button class="btn btn-primary" type="submit">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Basic Inputs end -->
        </div>
    </div>
</div>
<!-- END: Content-->